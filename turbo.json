{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "docs": {
      "outputs": [
        "dist/atomic-ui-js/docs"
      ] 
    },
    "lint": {
      "persistent": true
    },
    "build": {
      "outputs": [
        "dist/atomic-ui-js/**/*",
        "packages/atomic-ui-js-react/dist/**/*",
        "packages/atomic-ui-js-next/dist/**/*",
        "packages/atomic-ui-js/dist/**/*"
      ]
    },
    "build-storybook": {
      "outputs": [
        "dist/atomic-ui-js/storybook"
      ]
    },
    "watch": {
      "outputs": [
        "packages/atomic-ui-js/dist/index.min.css"
      ]
    },
    "dev": {
      "dependsOn": [
        "watch"
      ]
    },
    "lintfix": {
      "persistent": true
    },
    "test": {
      "persistent": true
    }
  }
}
