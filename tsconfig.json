{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "esnext"
    ],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "target": "ES2020",
    "declaration": false,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
