{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "esnext"
    ],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "declaration": false,
    "types": [
      "./types"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
