{
  "env": {
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:storybook/recommended"
  ],
  "ignorePatterns": [
    "**/archived/**/*",
    "**/node_modules/**/*",
    "**/generated/**/*"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
