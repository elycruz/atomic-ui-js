{
  "env": {
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:storybook/recommended"
  ],
  "ignorePatterns": [
    "**/archived/**/*",
    "**/node_modules/**/*",
    "**/generated/**/*",
    "**/storybook-static/**/*",
    "**/coverage/**/*",
    "**/dist/**/*",
    // @todo Do not include the following line in new configuration.
    "**/*.ts",
    "**/*.d.ts"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
