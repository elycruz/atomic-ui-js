{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/typings"
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.stories.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "_recycler/**/*.ts",
    "stories-old/**/*.ts"
  ]
}
