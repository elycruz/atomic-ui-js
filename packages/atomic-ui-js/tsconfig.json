{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "esnext"
    ],
    "module": "NodeNext",
    "moduleResolution":  "nodenext",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/archived",
    "**/coverage",
    "**/node_scripts"
  ],
  "include": [
    "**/*.js",
    "**/*.ts"
  ]
}
